{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended" 
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "react/prop-types": 0,
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}